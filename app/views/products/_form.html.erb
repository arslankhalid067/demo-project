<%= form_with model:@product, local: true do |form| %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.label :color %>
    <%= form.text_field :color %>
  </p>
  <p>
    <%= form.label :fabric %>
    <%= form.text_field :fabric %>
  </p>      
  <p>
  <%= form.submit %>
  </p>
<% end %>